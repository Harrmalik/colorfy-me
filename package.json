{
  "name": "colorfy-me",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "web": "nodemon ./bin/www",
    "watch-sass": "sass --watch public/sass:public/css",
    "watch-webpack": "webpack --progress --colors --watch --watch-poll",
    "dev": "npm run watch-sass & \n npm run watch-webpack & \n npm run web ",
    "restart": "pm2 restart www",
    "live": "pm2 start ./bin/www --name colorfyme",
    "start": "node ./bin/www"
  },
  "dependencies": {
    "body-parser": "~1.15.2",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.1",
    "debug": "~2.2.0",
    "express": "~4.14.0",
    "hbs": "~4.0.1",
    "lodash": "^4.17.4",
    "morgan": "~1.9.1",
    "node-sass-middleware": "0.9.8",
    "react": "^15.4.0",
    "react-dom": "^15.4.1",
    "webpack": "^1.13.3"
  },
  "devDependencies": {
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.8",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "reload": "^1.1.0"
  }
}
